// Subproceso para cuadrado
SubProceso CalcularCuadrado(lado, pi)
	Definir perimetro, area Como Real
	perimetro <- 4 * lado
	area <- lado ^ 2
	Escribir "Cuadrado: "
	Escribir "Perímetro: ", perimetro
	Escribir "Área: ", area
FinSubProceso

// Subproceso para pentágono
SubProceso CalcularPentagono(lado, pi)
	Definir perimetro, area Como Real
	perimetro <- 5 * lado
	area <- (5 * lado ^ 2) / (4 * Tan(pi / 5))
	Escribir "Pentágono: "
	Escribir "Perímetro: ", perimetro
	Escribir "Área: ", area
FinSubProceso

